<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F0F5"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/container1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F1F6"
        android:gravity="start"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/container2"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:background="@color/purple_500"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="460px"
                android:layout_height="match_parent"
                android:layout_gravity="end">

                <Spinner
                    android:id="@+id/langFrom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="160px"
                android:layout_height="match_parent">

            </FrameLayout>

            <FrameLayout
                android:layout_width="460px"
                android:layout_height="match_parent">

                <Spinner
                    android:id="@+id/langTo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container3"
            android:layout_width="match_parent"
            android:layout_height="435px"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/source"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#00FFFFFF"
                android:ems="10"
                android:gravity="top"
                android:hint="Введите текст"
                android:inputType="textMultiLine|textPersonName"
                android:padding="20dp"
                android:textAlignment="textStart"
                android:textColorHighlight="@color/teal_200"
                android:textColorLink="@color/purple_500"
                tools:ignore="RtlCompat" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:layout_weight="6">

                <Button
                    android:id="@+id/btnReset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container4"
            android:layout_width="match_parent"
            android:layout_height="110px"
            android:layout_gravity="center|center_horizontal"
            android:background="@color/teal_200"
            android:gravity="center|center_horizontal|center_vertical"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="110px"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/btnTranslate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/container5"
            android:layout_width="match_parent"
            android:layout_height="435px"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Перевод"
                android:padding="20dp"
                android:textColor="#191919"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container6"
            android:layout_width="match_parent"
            android:layout_height="110px"
            android:layout_gravity="right"
            android:background="@color/teal_200"
            android:gravity="right"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="100px"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginEnd="5dp">

                <Button
                    android:id="@+id/btnCopy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/container7"
            android:layout_width="match_parent"
            android:layout_height="475px"
            android:layout_marginTop="35px"
            android:background="@color/white"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:id="@+id/container8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F2F1F6"
            android:orientation="horizontal"></LinearLayout>
    </LinearLayout>
</RelativeLayout>